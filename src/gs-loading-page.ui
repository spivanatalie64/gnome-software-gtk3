<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <template class="GsLoadingPage" parent="GsPage">
    <accessibility>
      <property name="label" translatable="yes">Loading page</property>
    </accessibility>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
        <property name="hexpand">True</property>
        <property name="vexpand">True</property>
        <property name="spacing">12</property>
        <style>
          <class name="icon-dropshadow"/>
        </style>
        <child>
          <object class="GtkImage" id="status_page_image">
            <property name="icon-name">org.gnome.Software</property>
            <property name="pixel-size">128</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="status_page_title">
            <property name="label" translatable="yes">Starting Up</property>
            <property name="justify">center</property>
            <property name="wrap">True</property>
            <style>
              <class name="title-1"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="halign">center</property>
            <property name="width-request">400</property>
            <child>
              <object class="GtkProgressBar" id="progressbar">
                <property name="fraction">0.0</property>
                <property name="margin_bottom">12</property>
                <property name="hexpand">True</property>
                <style>
                  <class name="upgrade-progressbar"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
