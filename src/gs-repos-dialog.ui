<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.0"/>  <template class="GsReposDialog" parent="GtkDialog">
    <property name="title" translatable="yes">Software Repositories</property>    <property name="child">
      <object class="GtkBox">
    <property name="orientation">vertical</property>
        <child type="top">
          <object class="GtkHeaderBar">
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="title" bind-source="GsReposDialog" bind-property="title" bind-flags="sync-create"/>
              </object>
            </property>
          </object>
        </child>
        <property name="content">
          <object class="GtkOverlay" id="toast_overlay">
            <property name="child">
              <object class="GtkStack" id="stack">
                <property name="vexpand">True</property>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">waiting</property>
                    <property name="child">
                      <object class="GtkSpinner" id="spinner"/>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">empty</property>
                    <property name="child">
                      <object class="GtkBox" id="status_empty">
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <property name="halign">center</property>
    <property name="valign">center</property>
                        <property name="icon-name">org.gnome.Software-symbolic</property>
                        <property name="title" translatable="yes">No Repositories</property>
                      </object>
                    </property>
                  </object>
                </child>


                <child>
                  <object class="GtkStackPage">
                    <property name="name">sources</property>
                    <property name="child">
                      <object class="GtkBox" id="content_page">
    <property name="orientation">vertical</property>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
