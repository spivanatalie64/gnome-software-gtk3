<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="3.0"/>
  <template class="GsReposDialog" parent="GtkDialog">
    <property name="title" translatable="yes">Software Repositories</property>
    <property name="default-width">640</property>
    <property name="default-height">576</property>
    <property name="child">
      <object class="GtkBox">
        <child type="top">
          <object class="GtkHeaderBar">
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="title" bind-source="GsReposDialog" bind-property="title" bind-flags="sync-create"/>
              </object>
            </property>
          </object>
        </child>
        <property name="content">
          <object class="GtkOverlay" id="toast_overlay">
            <property name="child">
              <object class="GtkStack" id="stack">
                <property name="vexpand">True</property>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">waiting</property>
                    <property name="child">
                      <object class="GtkSpinner" id="spinner"/>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">empty</property>
                    <property name="child">
                      <object class="GtkBox" id="status_empty">
                        <property name="icon_name">org.gnome.Software-symbolic</property>
                        <property name="title" translatable="yes">No Repositories</property>
                      </object>
                    </property>
                  </object>
                </child>


                <child>
                  <object class="GtkStackPage">
                    <property name="name">sources</property>
                    <property name="child">
                      <object class="GtkBox" id="content_page">
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
